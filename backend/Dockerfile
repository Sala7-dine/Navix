# ---- Base image ----
FROM node:20-alpine

# ---- Work directory ----
WORKDIR /app

# ---- Copy package files ----
COPY package*.json ./

# ---- Install dependencies ----
RUN npm install

# ---- Copy source code ----
COPY . .

# ---- Expose port ----
EXPOSE 5000 
 
# ---- Start server ----
CMD ["npm", "run", "dev"]
